<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/splash_fragment">


    <fragment
        android:id="@+id/splash_fragment"
        android:name="com.example.test.ui.splash.SplashFragment"
        android:label="fragment_splash"
        app:popUpToInclusive="true"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splash_to_nav_home"
            app:destination="@id/list_fragment" />

    </fragment>



    <fragment
        android:id="@+id/detail_fragment"
        android:name="com.example.test.ui.picture_details.DetailsFragment"
        android:label="fragment_editprofile"
        app:popUpToInclusive="true"
        tools:layout="@layout/fragment_details_swipe">
        <action
            android:id="@+id/action_profile_to_home"
            app:destination="@id/list_fragment" />


    </fragment>
    <fragment
        android:id="@+id/list_fragment"
        android:name="com.example.test.ui.pictures_list.PicturesListFragment"
        android:label="fragment_list"
        app:popUpToInclusive="true"
        tools:layout="@layout/fragment_home_grid">
        <action
            android:id="@+id/action_home_to_detail"
            app:destination="@id/detail_fragment" />

    </fragment>
</navigation>